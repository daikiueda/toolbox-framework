{
  "name": "toolbox-framework",
  "version": "0.0.0",
  "description": "Template for a pool of miscellaneous functions with GUI",
  "engines": {
    "node": "22.15.1"
  },
  "main": "./out/main/index.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "create:workspace": "node scripts/create-workspace.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:check": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --max-warnings 0",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "quality:check": "npm run lint:check && npm run format:check && npm run typecheck && npm run test:workspaces",
    "test:workspaces": "npm run test --workspaces --if-present",
    "icon:generate": "npm run icon:generate --workspace packages/__electron",
    "build": "npm run typecheck && electron-vite build",
    "build:unpack": "npm run build && electron-builder -c packages/__electron/electron-builder.yml --dir",
    "build:win": "npm run build && electron-builder -c packages/__electron/electron-builder.yml --win",
    "build:mac": "electron-vite build && electron-builder -c packages/__electron/electron-builder.yml --mac",
    "build:linux": "electron-vite build && electron-builder -c packages/__electron/electron-builder.yml --linux",
    "prepare": "husky",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "classnames": "^2.5.1",
    "esbuild": "^0.25.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.93.2",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.7.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "9.1.10",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
